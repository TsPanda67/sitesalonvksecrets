---
// src/pages/prestations.astro
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

// --- INTERFACES POUR TYPER LES DONNÉES ---
interface Category {
  id: string;
  name: string;
}

interface BenefitList {
  benefits?: string[];
}

interface ServiceItem extends BenefitList {
  name: string;
  price: string;
  duration: string;
  description: string;
}

interface EpilationZone {
  name: string;
  price: string;
}

interface EpilationForfait {
  name: string;
  price: string;
  details: string;
  tagline: string;
}

interface EpilationOffre {
  name: string;
  discount: string;
  details: string;
}

interface OnglerieSoin extends BenefitList {
  name: string;
  price: string;
  description: string;
}

interface OngleriePose {
  name: string;
  price: string;
  description: string;
}

interface OnglerieForfait {
  name: string;
  price: string;
  details: string;
  tagline: string;
}
// --- FIN DES INTERFACES ---

const pageTitle = "Nos Prestations & Tarifs";
const metaDescription = "Découvrez tous nos soins d'exception au Salon VK Secrets à Strasbourg Neuhof : massages bien-être, soins du corps et visage personnalisés, épilations douces, maquillage et onglerie experte. Consultez nos prix et détails.";

const categories: Category[] = [
  { id: "massages", name: "Massages" },
  { id: "soins-corps", name: "Soins du Corps" },
  { id: "soins-visage", name: "Soins du Visage" },
  { id: "maquillage", name: "Maquillage" },
  { id: "epilations", name: "Épilations" },
  { id: "onglerie", name: "Onglerie" }
];

const massages: ServiceItem[] = [
  { name: "Massage Ayurvédique", price: "80€", duration: "1h15", description: "Un voyage millénaire au cœur de l'Inde pour harmoniser vos énergies vitales. Laissez les huiles chaudes et les manœuvres adaptées à votre constitution (dosha) dissoudre tensions et fatigue.", benefits: ["Rééquilibrage énergétique", "Réduction du stress profond", "Amélioration de la circulation", "Revitalisation"] },
  { name: "Massage Balinais", price: "80€", duration: "1h15", description: "Ce massage complet qui allie douceur et tonicité. Pétrissages profonds, étirements doux et effleurages fluides pour une relaxation musculaire et spirituelle.", benefits: ["Détente musculaire intense", "Lâcher-prise mental", "Peau nourrie", "Sensation d'harmonie"] },
  { name: "Massage Californien / Suédois", price: "80€", duration: "1h15", description: "L'alliance parfaite entre l'enveloppement doux du Californien et la profondeur ciblée du Suédois. Un ballet de mouvements longs et fluides associé à des pressions maîtrisées pour libérer chaque tension.", benefits: ["Relaxation globale", "Soulagement des tensions musculaires", "Amélioration de la conscience corporelle", "Bien-être psychologique"] },
  { name: "Massage Thaï traditionnel (bientôt disponible)", price: "75€", duration: "1h15", description: "Pratiqué au sol et habillé, ce massage ancestral stimule les lignes d'énergie par pressions et étirements passifs. Une véritable séance de yoga assisté pour retrouver souplesse et vitalité.", benefits: ["Gain de flexibilité", "Libération des blocages énergétiques", "Réduction des raideurs articulaires", "Tonification"] },
  { name: "Relaxation Coréenne (bientôt disponible)", price: "65€", duration: "1h", description: "Une méthode douce et surprenante basée sur des vibrations et des mobilisations passives. Lâchez totalement prise pendant que votre corps est bercé, étiré et dénoué en douceur, sans huile.", benefits: ["Lâcher-prise profond", "Détente articulaire", "Relâchement des tensions nerveuses", "Reconnexion au corps"] },
  { name: "Réflexologie plantaire thaïe", price: "70€", duration: "1h", description: "Vos pieds sont la carte de votre corps. Par la stimulation précise de zones réflexes avec un bâtonnet en bois et des techniques manuelles, retrouvez équilibre et légèreté dans tout votre être.", benefits: ["Stimulation des organes internes", "Réduction du stress et de la fatigue", "Amélioration de la circulation", "Sensation de légèreté"] },
  { name: "Amma Assis", price: "35€", duration: "20min", description: "La pause bien-être express ! Sur une chaise ergonomique et habillée, recevez un enchaînement précis de pressions et percussions sur le dos, les épaules, la nuque et les bras. Idéal pour recharger les batteries.", benefits: ["Soulagement immédiat des tensions", "Regain d'énergie rapide", "Clarté mentale", "Parfait pour une pause active"] },
  { name: "Massage Future Maman (bientôt disponible)", price: "65€", duration: "1h15", description: "Un cocon de douceur pour accompagner les changements de votre corps. Des manœuvres douces et adaptées pour soulager les tensions spécifiques à la grossesse et vous offrir un moment de connexion privilégié avec bébé.", benefits: ["Soulagement des douleurs lombaires", "Amélioration du sommeil", "Réduction du stress", "Hydratation de la peau"] },
  { name: "Massage Personnalisé", price: "85€", duration: "1h15", description: "Votre moment unique, co-créé avec Verena. Selon vos besoins et envies du jour, ce massage combine différentes techniques pour une réponse sur-mesure à vos attentes de détente ou de soulagement.", benefits: ["Répond à vos besoins spécifiques", "Combinaison de techniques", "Expérience totalement personnalisée"] }
];

const bodyCare: ServiceItem[] = [
  { name: "Modelage du Dos", price: "25€", duration: "30min", description: "Concentrez la détente là où les tensions s'accumulent. Un modelage ciblé pour dénouer les nœuds du dos, des épaules et de la nuque, et retrouver une sensation de légèreté.", benefits: ["Soulagement rapide des tensions dorsales", "Relaxation ciblée", "Amélioration de la posture"] }
];

const facialCare: ServiceItem[] = [
  { name: "Soin Essentiel Personnalisé", price: "40€", duration: "1h", description: "Révélez l'éclat naturel de votre peau. Après un diagnostic précis, ce soin complet (nettoyage, gommage, modelage, masque) est adapté à vos besoins spécifiques : hydratation, pureté, apaisement ou coup d'éclat.", benefits: ["Peau nettoyée en profondeur", "Teint lumineux et unifié", "Hydratation optimale", "Moment de détente visage"] }
];

const makeup: ServiceItem[] = [
  { name: "Maquillage Flash", price: "15€", duration: "15min", description: "Un maquillage rapide et frais pour sublimer votre beauté en quelques minutes.", benefits: ["Mise en beauté rapide", "Teint unifié", "Regard sublimé"] },
  { name: "Maquillage de Jour", price: "20€", duration: "30min", description: "Un maquillage naturel et élégant adapté à votre quotidien.", benefits: ["Look naturel", "Tenue longue durée", "Personnalisé à votre style"] },
  { name: "Mariée Naturel", price: "30€", duration: "40min", description: "Un maquillage mariée naturel, lumineux et harmonieux pour le plus beau jour de votre vie.", benefits: ["Effet naturel et sophistiqué", "Tenue longue durée", "Mise en valeur du regard"] }
];

const epilationZonesVisage: EpilationZone[] = [
  { name: "Lèvres", price: "6€" },
  { name: "Sourcils", price: "7€" },
  { name: "Sourcils avec teinture", price: "12€" },
  { name: "Réhaussement sourcil (browlift)", price: "35€" }, // Harmonisé, durée retirée
  { name: "Menton", price: "6€" },
  { name: "Visage complet", price: "15€" }
];

const epilationZonesCorps: EpilationZone[] = [
  { name: "Aisselles", price: "9€" }, { name: "Demi-bras", price: "12€" }, { name: "Bras complets", price: "18€" },
  { name: "Maillot Simple", price: "10€" }, { name: "Maillot Échancré", price: "14€" }, { name: "Maillot Semi-intégral", price: "20€" }, { name: "Maillot Intégral", price: "25€" },
  { name: "Demi-jambes", price: "14€" }, { name: "Cuisses", price: "15€" }, { name: "Jambes Complètes", price: "23€" },
  { name: "Ventre", price: "6€" }, { name: "Dos", price: "6€" }
];

const epilationForfaits: EpilationForfait[] = [
  { name: "Formule Regard Sublime", price: "50€", details: "Épilation + teinture + browlift (1h)", tagline: "Le regard parfait : restructuration, teinture et browlift pour un effet wow !" }, // Ajouté
  { name: "Formule Douceur", price: "29€", details: "Aisselles + Maillot simple + Demi-jambes", tagline: "Le trio essentiel pour une peau impeccable" },
  { name: "Formule Élégance", price: "32€", details: "Aisselles + Maillot échancré + Demi-jambes", tagline: "Pour une netteté parfaite au quotidien" },
  { name: "Formule Beauté", price: "43€", details: "Aisselles + Maillot Semi-Intégral + Jambes Complètes", tagline: "Une peau douce de la tête aux pieds" },
  { name: "Formule Confidence", price: "48€", details: "Aisselles + Maillot Intégral + Jambes Complètes", tagline: "La solution complète pour une confiance absolue" },
  { name: "Formule Sublime", price: "58€", details: "Aisselles + Maillot Intégral + Jambes Complètes + Visage complet", tagline: "Le rituel beauté ultime" },
  { name: "Formule Harmonie", price: "40€", details: "Aisselles + Maillot Intégral + Demi-Jambes", tagline: "Le combo pour une peau douce et soignée" }
];

const epilationOffresSpeciales: EpilationOffre[] = [
  { name: "Formule Étudiante", discount: "-15%", details: "Sur présentation carte valide (épilations à la carte)" },
  { name: "Pack Découverte", discount: "-10%", details: "Sur votre 1ère épilation" }
];

const onglerieSoins: OnglerieSoin[] = [
  { name: "Beauté des Mains", price: "25€", description: "Offrez à vos mains un soin complet : limage, soin des cuticules, gommage doux et massage relaxant. Pour des mains douces et soignées.", benefits: ["Mains hydratées", "Ongles nets", "Détente"] },
  { name: "Beauté des Pieds", price: "30€", description: "Chouchoutez vos pieds : limage, soin des cuticules, traitement des callosités (râpe), gommage et massage. Retrouvez des pieds légers et doux.", benefits: ["Pieds lisses", "Ongles parfaits", "Soulagement"] },
  { name: "Manucure", price: "15€", description: "Limage + cuticules. L'essentiel pour des ongles impeccables." },
  { name: "Pédicure", price: "18€", description: "Limage + cuticules. Des pieds nets en un clin d'œil." }
];

const ongleriePoses: OngleriePose[] = [
  { name: "Pose Vernis Classique (Mains ou Pieds)", price: "12€", description: "La touche de couleur parfaite pour sublimer vos ongles." },
  { name: "Pose Semi-permanent (Mains ou Pieds)", price: "23€", description: "Une couleur intense et une brillance impeccable qui durent jusqu'à 3 semaines." },
  { name: "Option Vernis Perméable (Halal)(bientôt disponible)", price: "+5€", description: "Une formule respectueuse pour allier beauté et conviction (sur demande)." },
  { name: "Dépose Semi-permanent", price: "7€", description: "Retrait en douceur du vernis semi-permanent." },
  { name: "Dépose + Repose Semi-permanent", price: "23€", description: "Dépose offerte si repose immédiate." },
  { name: "French Manucure Classique", price: "15€", description: "L'élégance intemporelle du sourire blanc." },
  { name: "French Manucure Semi-permanent", price: "27€", description: "La French parfaite pour longtemps." }
];

const onglerieForfaits: OnglerieForfait[] = [
  { name: "Mains de Fée", price: "44€", details: "Beauté des mains + Semi-permanent", tagline: "Le duo gagnant pour des mains sublimes" },
  { name: "Pieds de Velours", price: "48€", details: "Beauté des pieds + Semi-permanent", tagline: "Des pieds parfaits durablement" },
  { name: "Éclat Naturel", price: "58€", details: "Beauté des mains + Beauté des pieds + Vernis Classique (Mains & Pieds)", tagline: "Le soin complet pour une beauté naturelle" },
  { name: "Duo Sublime", price: "75€", details: "Beauté des mains + Beauté des pieds + Semi-permanent (Mains & Pieds)", tagline: "L'alliance parfaite du soin et de la couleur longue durée" }
];

const BenefitIconSVG = `<svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1.5 text-primary-500 flex-shrink-0" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>`;
const PhoneIconSVG = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>`;
const ScrollUpIconSVG = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 15l7-7 7 7" /></svg>`;

type IntroTextKeys = "massages" | "soins-corps" | "soins-visage" | "maquillage";
const introTexts: Record<IntroTextKeys, string> = {
  massages: "Voyages sensoriels à travers différentes techniques du monde pour un lâcher-prise total et une reconnexion profonde à votre corps.",
  "soins-corps": "Des rituels ciblés pour sublimer votre peau et vous procurer une sensation de bien-être profond.",
  "soins-visage": "Des soins adaptés aux besoins spécifiques de votre peau pour un teint éclatant et une peau revitalisée.",
  maquillage: "Des prestations maquillage adaptées à vos besoins, pour sublimer votre beauté naturelle en toute occasion."
};
---

<Layout 
  title={pageTitle} 
  description={metaDescription}
  image="/img/og-image-prestations.jpg"
>
  <section class="section-padding pt-24 md:pt-28 bg-gradient-to-br from-primary-100 to-background-light relative text-center">
    <div class="container mx-auto px-4 slide-up">
      <h1 class="font-display text-4xl md:text-5xl mb-3 text-text-dark">Nos Prestations d'Exception</h1>
      <p class="font-script text-2xl md:text-3xl mb-6 text-primary-500">Des soins experts pour sublimer votre beauté et votre bien-être</p>
      <p class="font-sans text-lg text-text-medium max-w-2xl mx-auto mb-10">
        Au Salon VK Secrets à Strasbourg Neuhof, chaque prestation est une invitation à la détente et à la mise en valeur de votre beauté naturelle. Explorez notre carte de soins et trouvez celui qui vous correspond.
      </p>
      
      <div class="sticky top-20 md:top-24 z-30 bg-background-light/80 backdrop-blur-md py-3 mb-10 rounded-xl shadow-lg border border-primary-200">
        <div class="container mx-auto px-4">
          <nav aria-label="Navigation des catégories de soins">
            <ul class="flex flex-wrap justify-center gap-x-4 gap-y-4 md:gap-x-6 md:gap-y-4">
              {categories.map((category) => (
                <li>
                  <a 
                    href={`#${category.id}`}
                    class="font-display text-base font-semibold px-6 py-2 rounded-full shadow-md border-2 border-primary-300 bg-white/90 text-primary-600 hover:bg-primary-500 hover:text-white hover:border-primary-500 focus:bg-primary-500 focus:text-white focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-300 active:scale-95 transition-all duration-200 cursor-pointer mb-1"
                    style="box-shadow:0 2px 8px 0 rgba(237,169,161,0.10);"
                  >
                    {category.name}
                  </a>
                </li>
              ))}
            </ul>
            <p class="text-xs text-accent-700 mt-2 md:mt-3 font-sans italic text-center max-w-xs mx-auto">
              Naviguez facilement entre nos différentes catégories de soins grâce à ces boutons. Touchez pour découvrir chaque univers beauté du salon !
            </p>
          </nav>
        </div>
      </div>
    </div>
  </section>

  {categories.filter(cat => ["massages", "soins-corps", "soins-visage", "maquillage"].includes(cat.id)).map(category => {
    let currentCategoryData: ServiceItem[] = []; 
    if (category.id === 'massages') currentCategoryData = massages;
    else if (category.id === 'soins-corps') currentCategoryData = bodyCare;
    else if (category.id === 'soins-visage') currentCategoryData = facialCare;
    else if (category.id === 'maquillage') currentCategoryData = makeup;

    return (
      <section id={category.id} class="section-padding scroll-mt-24 md:scroll-mt-28 bg-white first-of-type:pt-0">
        <div class="container mx-auto px-4">
          <div class="text-center max-w-3xl mx-auto mb-10 md:mb-12 slide-up">
            <h2 class="font-script text-3xl md:text-4xl mb-3 text-accent-900 decorative-line">{category.name}</h2>
            <p class="font-sans text-lg text-text-medium mt-8">{introTexts[category.id as IntroTextKeys]}</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {currentCategoryData.map((item, index) => (
              <div class="bg-background-light rounded-xl shadow-soft p-6 flex flex-col slide-up hover-lift h-full" style={`animation-delay: ${index * 0.05}s;`}>
                <div class="flex-grow">
                  <div class="flex flex-col sm:flex-row sm:items-start justify-between gap-2 mb-3">
                    <h3 class="font-display text-xl lg:text-2xl text-text-dark font-semibold">{item.name}</h3>
                    <div class="flex-shrink-0 mt-1 sm:mt-0">
                      <span class="font-sans bg-primary-400 text-white px-3 py-1 rounded-full text-xs font-semibold mr-2">{item.duration}</span>
                      <span class="font-sans font-bold text-xl text-primary-500">{item.price}</span>
                    </div>
                  </div>
                  <p class="font-sans text-text-medium text-sm leading-relaxed mb-4">{item.description}</p>
                </div>
                {item.benefits && item.benefits.length > 0 && (
                  <div class="mt-auto pt-4 border-t border-primary-200">
                    <h4 class="font-sans text-sm font-semibold text-text-dark mb-2">Les bienfaits :</h4>
                    <ul class="space-y-1.5">
                      {item.benefits.map((benefit: string) => ( 
                        <li class="flex items-start font-sans text-sm text-text-medium">
                          <Fragment set:html={BenefitIconSVG} />
                          {benefit}
                        </li>
                      ))}
                    </ul>
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      </section>
    )
  })}
  
  <section id="epilations" class="section-padding scroll-mt-24 md:scroll-mt-28 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-10 md:mb-12 slide-up">
        <h2 class="font-script text-3xl md:text-4xl mb-3 text-accent-900 decorative-line">Épilations Douces</h2>
        <p class="font-sans text-lg text-text-medium mt-8">
          Notre expertise pour une peau parfaitement lisse et confortable, avec des cires de qualité adaptées aux peaux les plus sensibles.
        </p>
      </div>
      <div class="bg-background-light rounded-xl shadow-soft p-6 md:p-8 mb-8">
        <div class="grid md:grid-cols-2 gap-x-8 gap-y-10 mb-12">
          <div>
            <h3 class="font-display text-2xl mb-6 text-text-dark border-b-2 border-primary-300 pb-3">Zones Visage</h3>
            <ul class="space-y-3 font-sans text-text-medium">
              {epilationZonesVisage.map((item: EpilationZone) => (
                <li class="flex justify-between items-center py-1 border-b border-primary-100 last:border-0">
                  <span>{item.name}</span>
                  <span class="font-semibold text-primary-500">{item.price}</span>
                </li>
              ))}
            </ul>
          </div>
          <div>
            <h3 class="font-display text-2xl mb-6 text-text-dark border-b-2 border-primary-300 pb-3">Zones Corps</h3>
            <ul class="space-y-3 font-sans text-text-medium">
              {epilationZonesCorps.map((item: EpilationZone) => (
                 <li class="flex justify-between items-center py-1 border-b border-primary-100 last:border-0">
                  <span>{item.name}</span>
                  <span class="font-semibold text-primary-500">{item.price}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-white via-primary-50 to-white rounded-2xl shadow-xl border border-primary-200 p-6 md:p-8 mb-8">
          <h3 class="font-display text-2xl lg:text-3xl mb-8 text-text-dark text-center decorative-line relative">Forfaits Épilation</h3>
           <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-10">
            {epilationForfaits.map((forfait: EpilationForfait, index: number) => (
              <div class="bg-white/95 rounded-2xl p-6 shadow-xl border border-primary-100 hover:scale-[1.03] hover:shadow-2xl transition-transform duration-300 slide-up h-full flex flex-col group" style={`animation-delay: ${index * 0.05}s;`}>
                <h4 class="font-display text-lg font-semibold text-primary-500 mb-2 group-hover:text-primary-600 transition-colors">{forfait.name} - <span class="text-accent-700">{forfait.price}</span></h4>
                <p class="font-sans text-text-medium mb-3 text-sm flex-grow">{forfait.details}</p>
                <p class="font-sans text-xs text-text-light italic mt-auto">{forfait.tagline}</p>
              </div>
            ))}
          </div>
        </div>
        
        <div class="bg-gradient-to-br from-white via-pink-50 to-white rounded-2xl shadow-xl border border-primary-200 p-6 md:p-8">
          <h3 class="font-display text-2xl lg:text-3xl mb-8 text-text-dark text-center decorative-line relative">Offres Spéciales</h3>
          <div class="flex flex-col md:flex-row gap-8 justify-center mt-10">
            {epilationOffresSpeciales.map((offre: EpilationOffre, index: number) => (
              <div class="bg-white/95 rounded-2xl p-6 shadow-xl border border-primary-100 hover:scale-[1.03] hover:shadow-2xl transition-transform duration-300 md:w-1/2 slide-up group" style={`animation-delay: ${index * 0.1}s;`}>
                <h4 class="font-display text-lg font-semibold text-accent-700 mb-2 group-hover:text-primary-600 transition-colors">{offre.name}</h4>
                <p class="font-sans text-2xl text-primary-500 font-bold mb-2">{offre.discount}</p>
                <p class="font-sans text-sm text-text-medium">{offre.details}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="onglerie" class="section-padding scroll-mt-24 md:scroll-mt-28 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center max-w-3xl mx-auto mb-10 md:mb-12 slide-up">
        <h2 class="font-script text-3xl md:text-4xl mb-3 text-accent-900 decorative-line">Onglerie & Beauté des Extrémités</h2>
        <p class="font-sans text-lg text-text-medium mt-8">
          Sublimez vos mains et vos pieds avec nos soins d'onglerie experts, de la manucure classique à la pose de vernis semi-permanent longue tenue.
        </p>
      </div>
