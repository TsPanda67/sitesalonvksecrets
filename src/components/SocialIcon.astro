---
// src/components/SocialIcon.astro
export interface Props {
  platform: 'facebook' | 'instagram' | 'twitter' | 'linkedin' | string; // Ajoutez d'autres plateformes au besoin
  url: string;
  ariaLabel?: string; // Pour l'accessibilité
  class?: string; // Pour des classes custom sur le lien <a>
  iconSize?: string; // ex: "h-6 w-6" ou "h-8 w-8"
}

const { platform, url, ariaLabel, class: customClasses, iconSize = "h-6 w-6" } = Astro.props;

// Définition des SVGs pour chaque plateforme
// Vous pourriez aussi les importer de fichiers .svg séparés dans src/assets/icons/
const icons: Record<string, string> = {
  facebook: `<svg xmlns="http://www.w3.org/2000/svg" class="${iconSize}" fill="currentColor" viewBox="0 0 24 24"><path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/></svg>`,
  instagram: `<svg xmlns="http://www.w3.org/2000/svg" class="${iconSize}" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>`,
  // Ajoutez d'autres icônes ici si nécessaire (twitter, linkedin, etc.)
  // twitter: `<svg>...</svg>`
};

const iconHtml = icons[platform.toLowerCase()] || `<svg class="${iconSize}" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8z"/></svg>`; // Icône par défaut (cercle)
const finalAriaLabel = ariaLabel || `Suivez Salon VK Secrets sur ${platform.charAt(0).toUpperCase() + platform.slice(1)}`;
---

<a 
  href={url} 
  target="_blank" 
  rel="noopener noreferrer" 
  class:list={[
    "p-2 rounded-full text-primary-100 hover:text-white transition-colors duration-300 hover-lift",
    customClasses // Classes de style pour le conteneur <a> (ex: fond spécifique du footer)
    // Exemple: si vous passez class="bg-accent-700 hover:bg-primary-400" depuis Footer.astro
    // Cela permet de contrôler le fond et le survol depuis l'extérieur.
  ]}
  aria-label={finalAriaLabel}
>
  <Fragment set:html={iconHtml} />
</a>