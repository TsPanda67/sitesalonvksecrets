---
// src/components/Hero.astro
import Button from './Button.astro';
// Icône téléphone (vous pouvez aussi l'importer d'un fichier .svg si vous préférez)
const PhoneIconSVG = `<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 group-hover:scale-110 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>`;
---

<section class="relative min-h-[85vh] lg:min-h-[90vh] flex items-center justify-center text-center lg:text-left overflow-hidden">
  {/* Image de fond et superposition */}
  <div class="absolute inset-0 z-0">
    <picture>
      <source srcset="/img/acl/hib-optw.webp" type="image/webp" />
      <img 
        src="/img/acl/hib-opt.jpg" 
        alt="Ambiance chaleureuse et relaxante du Salon VK Secrets à Strasbourg" 
        class="w-full h-full object-cover"
        loading="eager"
        fetchpriority="high"
        width="1920" height="1080"
      />
    </picture>
    {/* Superposition pour améliorer le contraste du texte */}
    <div class="absolute inset-0 bg-accent-900/50 backdrop-blur-sm"></div>
  </div>
  
  <div class="container mx-auto px-4 relative z-10 py-12 md:py-0">
    <div class="max-w-xl lg:max-w-2xl mx-auto lg:mx-0">
      <h1 class="font-script text-5xl lg:text-7xl mb-4 text-white slide-up">
        Salon VK Secrets
      </h1>
      <h2 class="font-display text-3xl lg:text-4xl mb-6 text-primary-200 slide-up" style="animation-delay: 0.15s;">
        Votre Havre de Bien-Être Féminin à Strasbourg
      </h2>
      <p class="font-sans text-lg md:text-xl mb-8 text-primary-100 slide-up" style="animation-delay: 0.3s;">
        Un cocon de douceur et d'expertise exclusivement réservé aux femmes. Découvrez nos massages relaxants, soins du corps personnalisés, épilations douces et onglerie soignée dans une ambiance chaleureuse et intime.
      </p>
      
      <div class="flex flex-col sm:flex-row flex-wrap gap-4 justify-center lg:justify-start slide-up" style="animation-delay: 0.45s;">
        <Button 
          href="tel:+33783960543" 
          variant="primary"
          size="lg"
        >
          <Fragment set:html={PhoneIconSVG} />
          Prendre RDV : 07 83 96 05 43
        </Button>
        <Button 
          href="https://wa.me/33783960543" 
          variant="outline"
          size="lg"
          class="border-green-500 text-green-700 hover:bg-green-50 hover:border-green-600 focus:ring-green-500"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 24 24"><path d="M20.52 3.48A12 12 0 003.48 20.52l-1.3 4.77a1 1 0 001.22 1.22l4.77-1.3A12 12 0 0020.52 3.48zm-8.52 17A10 10 0 1119 5a10 10 0 01-7 15zm4.29-7.71l-2.29-2.29a1 1 0 00-1.42 0l-2.29 2.29a1 1 0 001.42 1.42l1.29-1.3V17a1 1 0 002 0v-2.59l1.29 1.3a1 1 0 001.42-1.42z"/></svg>
          WhatsApp
        </Button>
        <Button 
          href="https://www.instagram.com/salonvksecrets/" 
          variant="outline"
          size="lg"
          class="border-pink-400 text-pink-600 hover:bg-pink-50 hover:border-pink-500 focus:ring-pink-400"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-pink-400" fill="currentColor" viewBox="0 0 24 24"><path d="M7.75 2h8.5A5.75 5.75 0 0122 7.75v8.5A5.75 5.75 0 0116.25 22h-8.5A5.75 5.75 0 012 16.25v-8.5A5.75 5.75 0 017.75 2zm0 2A3.75 3.75 0 004 7.75v8.5A3.75 3.75 0 007.75 20h8.5A3.75 3.75 0 0020 16.25v-8.5A3.75 3.75 0 0016.25 4h-8.5zm8.25 2.5a1 1 0 110 2 1 1 0 010-2zM12 7a5 5 0 110 10 5 5 0 010-10zm0 2a3 3 0 100 6 3 3 0 000-6z"/></svg>
          Instagram
        </Button>
        <Button 
          href="/prestations" 
          variant="outlineWhite"
          size="lg"
        >
          Découvrir nos Soins
        </Button>
      </div>
      
      {/* Badge Promotionnel */}
      <div 
        class="mt-10 sm:mt-12 bg-primary-500 text-white rounded-md p-4 max-w-xs sm:max-w-sm shadow-medium slide-up inline-block lg:ml-0 transform hover:scale-105 transition-transform duration-300" 
        style="animation-delay: 0.6s;"
      >
        <p class="font-display text-md sm:text-lg font-semibold">✨ Offre de Bienvenue ✨</p>
        <p class="font-sans text-lg sm:text-xl font-bold">-30% sur les 50 premières clientes !</p>
        <p class="font-sans text-xs mt-1 opacity-90">(Il ne reste plus que quelques places)</p>
      </div>
    </div>
  </div>
  
  {/* Transition douce vers la section suivante */}
  <div class="absolute bottom-0 left-0 w-full h-20 bg-gradient-to-t from-background-light to-transparent"></div>
</section>