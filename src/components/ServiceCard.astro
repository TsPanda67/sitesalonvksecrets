---
// src/components/ServiceCard.astro
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  href: string;
  altText: string;
}
const { title, description, imageUrl, href, altText } = Astro.props;
---
<a href={href} class="group block bg-white rounded-xl shadow-soft overflow-hidden transform transition-all duration-300 hover:shadow-medium hover-lift service-card">
  <div class="relative aspect-video"> {/* Ou aspect-[4/3] si vos images sont plus carr√©es */}
    <img src={imageUrl} alt={altText} class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105" loading="lazy" />
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent"></div>
  </div>
  <div class="p-6">
    <h3 class="font-display text-xl md:text-2xl mb-2 text-text-dark group-hover:text-primary-500 transition-colors">{title}</h3>
    <p class="font-sans text-sm text-text-medium leading-relaxed">{description}</p>
  </div>
</a>